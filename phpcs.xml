<?xml version="1.0"?>
<ruleset name="Project Rules">
    <description>PHPCS rules for the project</description>

    <!-- Use PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Scan only source code -->
    <file>src</file>

    <!-- Ignore vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>
</ruleset>
